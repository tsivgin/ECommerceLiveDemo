@model ECommerceLiveDemo.Models.DTOs.StremingVideoDto
<div class="col-md-8">
   <div class="single-video-left">
      <div class="single-video">
         <iframe width="100%" height="315" src="@Model.VideoUrl" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
      </div>
      <div class="single-video-title box mb-3">
         <h2><a href="#">@Model.VideoName</a></h2>
         <p class="mb-0"><i class="fas fa-eye"></i> @Model.Viewer views</p>
      </div>
      <div class="single-video-info-content box mb-3">
         <h6>Ürünler :</h6>
         @{
            foreach(var item in @Model.Products){
               <p>@item.Name</p>
            }
          }
         <h6>Kategoriler :</h6>
           @* @foreach(var item in @Model.Categories){
               <p>item.Name</p>
            }*@
         
         <h6>Video Hakkında :</h6>
         <p>@Model.VideoDescription </p>
         
         <h6>Ürünler :</h6>
         <p class="tags mb-0">
            <span><a href="#">Uncharted 4</a></span>
            <span><a href="#">Playstation 4</a></span>
            <span><a href="#">Gameplay</a></span>
            <span><a href="#">1080P</a></span>
            <span><a href="#">ps4Share</a></span>
            <span><a href="#">+ 6</a></span>
         </p>
      </div>
   </div>
</div>
