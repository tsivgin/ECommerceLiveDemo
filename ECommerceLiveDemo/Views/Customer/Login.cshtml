@Model User

@{
    ViewBag.Title = "title";
    Layout = "_LoginLayout";
}
<link href="~/css/login.css" rel="stylesheet">

<a href="/" class="logo">
    <img src="https://assets.codepen.io/1462889/fcy.png" alt="">
</a>

<div class="section">
    <div class="container">
        <div class="row full-height justify-content-center">
            <div class="col-12 text-center align-self-center py-5">
                <div class="section pb-5 pt-5 pt-sm-2 text-center">
                    <h6 class="mb-0 pb-3">
                        <span>Log In </span><span>Sign Up</span>
                    </h6>
                    <input class="checkbox" type="checkbox" id="reg-log" name="reg-log"/>
                    <label for="reg-log"></label>
                    <div class="card-3d-wrap mx-auto">
                        <div class="card-3d-wrapper">

                            <div class="card-front">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3">Log In</h4>
                                        @using (Html.BeginForm("Login", "Customer", FormMethod.Post))
                                        {
                                            <div class="form-group">
                                                <input type="Email" class="form-style" placeholder="Your Email" name="Email" id="Email" autocomplete="off">
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="Password" class="form-style" placeholder="Your Password" name="Password" id="Password" autocomplete="off">
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>
                                            <input class="btn btn-primary" type="submit" value="Giriş Yap">
                                        @* <button class="btn btn-primary" onclick="Login()" type="button">Login</button> *@
                                            <p class="mb-0 mt-4 text-center">
                                                <a href="#0" class="link">Forgot your password?</a>
                                            </p>
                                        }
                                    </div>
                                </div>
                            </div>


                            <div class="card-back">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3">Sign Up</h4>
                                        @using (Html.BeginForm("Register", "Customer", FormMethod.Post))
                                        {
                                            <div class="form-group">
                                                <input type="text" class="form-style" placeholder="Adınızı Giriniz" name="FirstName" id="FirstName" autocomplete="off">
                                                <i class="input-icon uil uil-user"></i>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-style" placeholder="Soyadınızı Giriniz" name="LastName" id="LastName" autocomplete="off">
                                                <i class="input-icon uil uil-user"></i>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-style" placeholder="Cinsiyet Giriniz" name="Gender" id="Gender" autocomplete="off">
                                                <i class="input-icon uil uil-user"></i>
                                            </div>
                                            <div class="form-group">
                                                <input type="tel" pattern="[0-9]{10}" class="form-style" placeholder="Telefon Giriniz(0 Koymayınız)" name="MobilePhoneNo" id="MobilePhoneNo" autocomplete="off">
                                                <i class="input-icon uil uil-user"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="email" class="form-style" placeholder="Email" name="Email" id="Email" autocomplete="off">
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" class="form-style" placeholder="Şifreyi giriniz" name="Password" id="Password" autocomplete="off">
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>

                                            <input class="btn mt-4" type="submit" value="Kayıt Ol">
                                        @* <a href="#" id="register" class="btn mt-4">submit</a> *@
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<script type="text/javascript">
    function Login() {
        var login = {
            userName: $("#username").val(),
            password: $("#password").val()
        }
        $('#target').html('sending..');
        $.ajax({
            url: '/LoginPost',
            type: 'Post',
            data: { username: $("#username").val(), password: $("#password").val() },
            success: function (data) {
                $('#target').html(data.msg);
				console.log('your message');
            }
        });
